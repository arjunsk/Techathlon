<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_normal"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginRight="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/map_thumbnail_1"
                android:id="@+id/hunt_thumbnail"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_normal"
                android:background="@drawable/shadow"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/hunt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:maxLength="20"
                    android:padding="@dimen/padding_large"
                    android:text="@string/hunt_sample_0"
                    android:textColor="@color/textPrimary"
                    android:shadowColor="@color/textShadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textSize="@dimen/text_large"/>

                <TextView
                    android:id="@+id/hunt_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_large"
                    android:text="@string/hunt_prize_sample_0"
                    android:textColor="@color/textPrimary"
                    android:shadowColor="@color/textShadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textSize="@dimen/text_large"/>

            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/padding_large"
                android:text="Share"
                android:textColor="@color/colorPrimary"
                style="?android:borderlessButtonStyle"
                android:id="@+id/hunt_share_button"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/hunt_share_button"
                android:padding="@dimen/padding_large"
                android:text="Join"
                android:textColor="@color/colorPrimary"
                style="?android:borderlessButtonStyle"
                android:id="@+id/hunt_play_button"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>